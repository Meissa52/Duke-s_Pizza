
@{
    ViewBag.Title = "Home_Customer";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<h1 class="text-center">Your Order History</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>OrderID</th>
                <th>OrderMethod</th>
                <th>Order Date</th>
                <th>Order Time</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>Detail Pizza Info</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (System.Data.DataRow dr in ViewBag.emp.Rows)
                {
                        <tr>
                            <td>@dr["OrderID"]</td>
                            <td>@dr["OrderMethod"]</td>
                            <td>@dr["Date"]</td>
                            <td>@dr["Time"]</td>
                            <td>@dr["Street"]</td>
                            <td>@dr["City"]</td>
                            <td>@dr["State"]</td>
                            <td><a href="/Customer/Show_PizzaInfo?OrderID=@dr["OrderID"]">View</a></td>
                            <td>
                                <a href="/Customer/EditOrderInto?OrderID=@dr["OrderID"]">Edit </a>
                                <a href="/Customer/DeleteOrderInfo?OrderID=@dr["OrderID"]">Delete</a>
                            </td>
                        </tr>
                }
            }

        </tbody>
    </table>
</div>