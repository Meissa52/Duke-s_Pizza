
@{
    ViewBag.Title = "Show_PizzaInfo";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2 class="text-center">Your Pizza Information</h2>
<hr class="my-4">

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>PizzaID</th>
                <th>Size</th>
                <th>Topping</th>
                <th>Price</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @{
                double TotPrice = 0;
                foreach (System.Data.DataRow dr in ViewBag.emp1.Rows)
                {
                        string cheese = Convert.ToInt32(dr["Cheese"]) == 1 ? "Cheese" : "";
                        string blackolives = Convert.ToInt32(dr["BlackOlives"]) == 1 ? "BlackOlives" : "";
                        string bacon = Convert.ToInt32(dr["Bacon"]) == 1 ? "Bacon" : "";
                        string greenpeppers = Convert.ToInt32(dr["Greenpeppers"]) == 1 ? "Greenpeppers" : "";
                        string pineapple = Convert.ToInt32(dr["Pineapple"]) == 1 ? "Pineapple" : "";
                        string mushroom = Convert.ToInt32(dr["Mushroom"]) == 1 ? "Mushroom" : "";
                        string spinatch = Convert.ToInt32(dr["Spinatch"]) == 1 ? "Spinatch" : "";
                        string onions = Convert.ToInt32(dr["Onions"]) == 1 ? "Onions" : "";
                        string shrimp = Convert.ToInt32(dr["Shrimp"]) == 1 ? "Shrimp" : "";
                        string sausages = Convert.ToInt32(dr["Sausages"]) == 1 ? "Sausages" : "";
                        string chicken = Convert.ToInt32(dr["Chicken"]) == 1 ? "Chicken" : "";

                        TotPrice += Convert.ToDouble(dr["Price"]);
                        <tr>
                            <td>@dr["PizzaID"]</td>
                            <td>@dr["Size"]</td>
                            <td>@cheese, @blackolives, @greenpeppers, @pineapple, @mushroom, @spinatch, @onions, @shrimp, @sausages, @chicken</td>
                            <td>$@Convert.ToDouble(dr["Price"])</td>
                            <td>
                                <a href="/Customer/EditPizzaInfo?PizzaID=@dr["PizzaID"]">Edit </a>
                                <a href="/Customer/DeleteOnePizzaInfo?PizzaID=@dr["PizzaID"]">Delete</a>
                            </td>
                        </tr>
                }
            }
                        <tr>
                            <td></td>
                            <td></td>
                            <td class="text-right"><strong>Total Price: </strong></td>
                            <td><strong>$@TotPrice</strong></td>
                            <td></td>
                        </tr>

        </tbody>
    </table>
</div>