
@{
    ViewBag.Title = "Order_Confirmation";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<h1 class="text-center">Order_Confirmation</h1>
<form>
    <h2 class="text-center">Pizza Information</h2>
    <hr class="my-4">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>PizzaID</th>
                    <th>Size</th>
                    <th>Topping</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @{
                    double TotPrice = 0.0;
                    foreach (System.Data.DataRow dr in ViewBag.emp1.Rows)
                    {

                        string cheese = Convert.ToInt32(dr["Cheese"]) == 1 ? "Cheese" : "";
                        string blackolives = Convert.ToInt32(dr["BlackOlives"]) == 1 ? "BlackOlives" : "";
                        string bacon = Convert.ToInt32(dr["Bacon"]) == 1 ? "Bacon" : "";
                        string greenpeppers = Convert.ToInt32(dr["Greenpeppers"]) == 1 ? "Greenpeppers" : "";
                        string pineapple = Convert.ToInt32(dr["Pineapple"]) == 1 ? "Pineapple" : "";
                        string mushroom = Convert.ToInt32(dr["Mushroom"]) == 1 ? "Mushroom" : "";
                        string spinatch = Convert.ToInt32(dr["Spinatch"]) == 1 ? "Spinatch" : "";
                        string onions = Convert.ToInt32(dr["Onions"]) == 1 ? "Onions" : "";
                        string shrimp = Convert.ToInt32(dr["Shrimp"]) == 1 ? "Shrimp" : "";
                        string sausages = Convert.ToInt32(dr["Sausages"]) == 1 ? "Sausages" : "";
                        string chicken = Convert.ToInt32(dr["Chicken"]) == 1 ? "Chicken" : "";

                        TotPrice += Convert.ToDouble(dr["Price"]);
                        <tr>
                            <td>@dr["PizzaID"]</td>
                            <td>@dr["Size"]</td>
                            <td>@cheese, @blackolives, @greenpeppers, @pineapple, @mushroom, @spinatch, @onions, @shrimp, @sausages, @chicken</td>
                            <td>$@Convert.ToDouble(dr["Price"])</td>
                        </tr>
                    }
                }
                        <tr>
                            <td></td>
                            <td></td>
                            <td class="text-right"><strong>Total Price: </strong></td>
                            <td><strong>$@Convert.ToDouble(TotPrice)</strong></td>
                        </tr>

            </tbody>
        </table>
    </div>

    <h2 class="text-center">Order Information</h2>
    <hr class="my-4">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>OrderMethod</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (System.Data.DataRow dr in ViewBag.emp2.Rows)
                    {
                        <tr>
                            <td>@dr["OrderMethod"]</td>
                            <td>@dr["Date"]</td>
                            <td>@dr["Time"]</td>
                            <td>@dr["Street"]</td>
                            <td>@dr["City"]</td>
                            <td>@dr["State"]</td>
                            <td>@dr["Zip"]</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <hr class="my-4">
    <div class="form-group">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3">
                <button id="download-button" class="btn btn-secondary btn-lg btn-block">@Html.ActionLink("Confirm", "Order_Save", "Customer")</button><a href="" type=""></a>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <button id="download-button" class="btn btn-secondary btn-lg btn-block">@Html.ActionLink("Back", "Order_Confirmation", "Customer")</button><a href="" type=""></a>
            </div>
        </div>
    </div>
</form>
