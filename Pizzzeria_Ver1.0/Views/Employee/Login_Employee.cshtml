
@{
    ViewBag.Title = "Login_Employee";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}


<h2 class="text-center">Login For Employee</h2>

<form method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-8">
                <label class="control-label no-padding-right" for="Username">Username</label>
                <input type="text" name="Username" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-8">
                <label class="control-label no-padding-right" for="Password">Password</label>
                <input type="password" name="Password" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-5">
            <input type="submit" class="col-sm-4 col-md-3 btn btn-primary" value="Sign In">
        </div>
    </div>
        <br />
        <div class="row">
            <div class="col-md-offset-5">
                <input type="reset" class="col-sm-4 col-md-3 btn btn-danger" value="Reset">
            </div>
        </div>
    </div>
</form>

@{
    if (TempData["msg"] != null)
    {
        <script>alert('@TempData["msg"]')</script>
    }
}


