
@{
    ViewBag.Title = "Home_Employee";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1 class="text-center">Customer's Order History</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>OrderID</th>
                <th>Customer Name</th>
                <th>OrderMethod</th>
                <th>Order Date</th>
                <th>Order Time</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>Detail Pizza Info</th>
                <th>Confirm</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (System.Data.DataRow dr in ViewBag.emp.Rows)
                {
                    if (Convert.ToBoolean(dr["Is_delivered"]))
                    {
                        <tr>
                            <td>@dr["OrderID"]</td>
                            <td>@dr["Fullname"]</td>
                            <td>@dr["OrderMethod"]</td>
                            <td>@dr["Date"]</td>
                            <td>@dr["Time"]</td>
                            <td>@dr["Street"]</td>
                            <td>@dr["City"]</td>
                            <td>@dr["State"]</td>
                            <td><a href="/Customer/Show_PizzaInfo?OrderID=@dr["OrderID"]">View</a></td>
                            <td><a href="/Employee/Order_Finish?OrderID=@dr["OrderID"]">Confirm</a></td>
                        </tr>
                    }

                }
            }

        </tbody>
    </table>
</div>